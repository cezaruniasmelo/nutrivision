rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Match any file directly inside the user's folder (e.g. profile_pic)
    match /users/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Match any file in subdirectories (e.g. patients/123/pic.jpg)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}